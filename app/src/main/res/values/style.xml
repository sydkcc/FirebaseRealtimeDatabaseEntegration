<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButtonStyle">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">15pt</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#C62B74</item>
    </style>

    <style name="SearchTextBar" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textSize">@dimen/search_hint_text_size</item>
        <item name="android:drawableStart">@drawable/ic_search_light_gray</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:radius">8dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">@dimen/app_general_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">@string/home_search_hint</item>
        <item name="android:layout_height">@dimen/search_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>