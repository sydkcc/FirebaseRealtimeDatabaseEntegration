<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.firebaserealtimedatabaseentegration.views.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_basketFragment"
            app:destination="@+id/basketFragment">
        </action>
        <action
            android:id="@+id/action_homeFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment">
            <argument
                android:name="productId"
                app:argType="string"/>
        </action>
    </fragment>
    <fragment
        android:id="@+id/basketFragment"
        android:name="com.example.firebaserealtimedatabaseentegration.views.BasketFragment"
        android:label="BasketFragment"
        tools:layout="@layout/fragment_basket">
        <action
            android:id="@+id/action_basketFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@+id/basketFragment"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_basketFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment">
            <argument
                android:name="productId"
                app:argType="string"/>
        </action>
    </fragment>
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.firebaserealtimedatabaseentegration.views.ProductDetailFragment"
        android:label="ProductDetailFragment"
        tools:layout="@layout/fragment_product_detail">

        <argument
            android:name="productId"
            app:argType="string"/>
        <action
            android:id="@+id/action_productDetailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>